<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AlertCardViewStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/cardBackground</item>
    </style>

    <style name="TextLarge">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/textSizeLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDisplay" parent="@style/Base.TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextLarge.AlarmItemLabel">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextLarge.AlarmItemRelativeTime">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="TextMedium">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSmall">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextSmall.AlarmItemTime">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.Button" parent="@style/Base.Widget.AppCompat.Button.Colored">
        <item name="android:padding">32dp</item>
        <item name="android:textColor">@color/textInverted</item>
    </style>

    <style name="AppTheme.Button.Accent">
        <item name="android:colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Button.Accept">
        <item name="android:colorButtonNormal">@color/acceptCall</item>
    </style>

</resources>
