<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:orientation="vertical"
    android:gravity="center"
    >

    <ImageView
        android:id="@+id/alarmHeaderImage"
        android:src="@drawable/ic_bell_outline_24dp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:tint="@color/text"
        />

    <TextView
        android:id="@+id/alarmItemLabelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextLarge.AlarmItemLabel"
        android:text="Your alarms"
        android:layout_marginBottom="16dp"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/alarmTipCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:gravity="end"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is the place for your important tasks. When the time is due you will receive a call from another user"
                android:layout_marginBottom="8dp"
                />

            <Button
                android:id="@+id/alarmHeaderTipButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Got it"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>