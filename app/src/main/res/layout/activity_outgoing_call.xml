<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_incoming_call"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.munternet.app.courtesycall.OutgoingCallActivity">

    <ImageView
        android:id="@+id/bellImage"
        android:layout_centerInParent="true"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/ic_bell_outline_24dp"
        android:tint="@color/colorAccent"
        />

    <TextView
        android:id="@+id/infoText"
        android:padding="8dp"
        android:layout_marginBottom="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bellImage"
        android:layout_centerHorizontal="true"
        android:text="TODO: Add info regarding the call here"
        style="@style/TextSmall"
        android:textColor="@color/colorAccent"
        />

    <TextView
        android:id="@+id/answerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/infoText"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        style="@style/TextDisplay"
        />

    <Button
        android:id="@+id/performCallButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Make the call"
        android:theme="@style/AppTheme.Button.Accent"
        android:layout_marginBottom="16dp"
        />

</RelativeLayout>
