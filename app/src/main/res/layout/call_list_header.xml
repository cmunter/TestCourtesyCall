<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:orientation="vertical"
    android:gravity="center"
    >

    <ImageView
        android:id="@+id/alarmHeaderImage"
        android:src="@drawable/ic_group_24dp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/alarmItemLabelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextLarge.AlarmItemLabel"
        android:text="Perform a Curtesy call"
        android:layout_below="@id/alarmHeaderImage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/callTipCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:gravity="end"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alarms from other users. Help the community, by calling other users. Just check the alarms"
                android:layout_marginBottom="8dp"
                />

            <Button
                android:id="@+id/callHeaderTipButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Got it"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>